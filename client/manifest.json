{
  "manifest_version": 3,
  "name": "Youtube Summarizer",
  "version": "1.0.0",
  "description": "An extension that provides text transcription for youtube videos containing english subtitles ",
  "permissions": ["activeTab", "tabs", "declarativeContent"],
  "host_permissions": ["https://tguch7y3xu72nbbxcv4hhqaquu0pfdqv.lambda-url.us-east-1.on.aws/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "js": ["contentScript.js"],
      "css": ["content.css"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}